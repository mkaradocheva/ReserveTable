@using Microsoft.AspNetCore.Identity
@using ReserveTable.Domain
@inject SignInManager<ReserveTableUser> SignInManager
@inject UserManager<ReserveTableUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Restaurants" asp-action="All" title="View all restaurants">All restaurants</a>
            </li>

            if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Restaurants" asp-action="Create" title="Add new restaurant">Add restaurant</a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link" asp-controller="Reservations" asp-action="My" title="My reservations">My reservations</a>
            </li>

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>