@model ReserveTable.Models.Reviews.CreateReviewViewModel

<h2 class="text-center text-white p-3">Write a review</h2>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-warning font-weight-bold"></div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label text-white">Rate this restaurant 1/10</label>
                <input asp-for="Rate" class="form-control" type="number" min="1" max="10" value="10" />
                <span asp-validation-for="Rate" class="text-warning font-weight-bold"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label text-white">Write a review</label>
                <textarea asp-for="Comment" type="text" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-warning font-weight-bold"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

