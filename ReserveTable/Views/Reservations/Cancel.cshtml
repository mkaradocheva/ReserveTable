@model ReserveTable.Models.Reservations.CancelReservationViewModel

<h3 class="text-center p-4">Are you sure you want to cancel this reservation?</h3>
<div class="text-center">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>

    <div class="d-flex justify-content-center p-3">
        <a href="/Reservations/My" class="text-white">Back to reservations</a>
    </div>

    <form asp-action="CancelReservation" class="d-flex justify-content-center">
        <div></div>
        <input type="submit" value="Cancel" class="btn btn-danger" />
    </form>
</div>
